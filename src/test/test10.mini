var point := class::new("point", :X, :Y)

var A := point(10, 20)

print('A:X = {A:X}\n')
print('A = {A}\n')

A:Y := 200

method::set(string::of, point; P) 'point({P:X}, {P:Y})'

print('A = {A}\n')

method::set(+, point, point; A, B) point(A:X + B:X, A:Y + B:Y)

var B := point(23, 9.1)

print('{A} + {B} = {A + B}\n')

method::set(*, point, number; A, N) point(A:X * N, A:Y * N)
method::set(*, number, point; N, A) point(N * A:X, N * A:Y)

print('{A} * 5 = {A * 5}\n')
print('7.1 * {B} = {7.1 * B}\n')

var vector := class::new("vector", point, :Z)

var C := vector(1, 2, 3)

print('C = {C}\n')

method::set(string::of, vector; V) 'vector({V:X}, {V:Y}, {V:Z})'

print('C = {C}\n')



